# ═══════════════════════════════════════════════════════════
#                 WEBHOOK SETTINGS (OPTIONAL)
# ═══════════════════════════════════════════════════════════

# Discord Webhook for external integrations (leave empty if not needed)
webhook_url: ""

# Webhook secret for security (leave empty if not using webhooks)
webhook_secret: ""

